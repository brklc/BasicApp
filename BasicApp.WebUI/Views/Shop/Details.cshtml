@model BasicApp.Entitites.Product
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Name
        </h1>
        <hr />
        <a href="#" class="btn btn-link p-0 mb-3">Telefon</a>
        <div class="mb-3">
            <h4 class="text-primary mb-3">
                @Model.Price TL
            </h4>
           
                @if (!User.IsInRole("admin"))
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <div class="product_variant quantity">
                            <label>Adet</label>
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input min="1" step="1" value="1" name="quantity" type="number">
                            <button class="button" type="submit">Add To Cart</button>
                        </div>
                    </form>
                }
            

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">

        </p>
    </div>
</div>